root = true

[*]
indent_style = tab
tab_width = 8
end_of_line = lf
charset = utf-8
indent_size = 8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.[ch]]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.sym]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.sh]
indent_style = tab
indent_size = 4
